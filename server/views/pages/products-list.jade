extends ../layout/index

block head
    script.
        window.products = !{ PRODUCTS ? JSON.stringify(PRODUCTS) : JSON.stringify({}) };


block content
    include ../components/modal

    div {{util.mediaQuery.get()}}
    div.row
        div.small-6.medium-4.large-2.column.text-center(
            ng-repeat="(key, product) in products.all"
        )

            a.row.collapse.bg-blue.round-md.pad-none(ng-click="product.click()")
                div.small-12.column

                    div.row.bg-red.text-white
                        div.small-12.column
                            div.spacer-sm
                            div.text-sm {{product.name}}
                            div.spacer-sm



                div.small-12.column
                    div.spacer-md
                    div.round-md.bg-gray-xlight.pad
                        div.square-md.round-md(
                            style="background-image: url('{{product.image}}')"
                        )
                    div.spacer-md

                div.small-12.column
                    div.row.bg-gray-dark.text-white
                        div.small-12.column
                            div.spacer-sm
                            div.text-xs &#8364; {{product.price}}
                            div.spacer-sm
            div.spacer-lg